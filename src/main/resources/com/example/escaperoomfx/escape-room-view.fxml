<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.escaperoomfx.EscapeRoomController">
    <ImageView fx:id="background"  fitWidth="800" fitHeight="500" />
    <!-- <ImageView fx:id="logo" layoutX="100" layoutY="100" fitWidth="110" fitHeight="110" />-->
<VBox alignment="CENTER" >
    <Label text="Descripción" textFill="WHITE"/>
    <HBox spacing="20"  alignment="CENTER">
        <Label text="Número entre 1 y 100" textFill="WHITE"/>
        <Label text="Tes un total de 6 intentos" textFill="WHITE"/>
        <Label fx:id="numberOfAttempts" textFill="WHITE"/>
    </HBox>
    <HBox alignment="CENTER" spacing="20">
        <Label text="Número:" textFill="WHITE"/>
        <TextField promptText="Hola"/>
        <Button fx:id="tryButton" text="Probar" onAction="#onTryButtonClick" />
    </HBox>
    <Label text="Feedback" textFill="WHITE"/>
</VBox>
</StackPane>
